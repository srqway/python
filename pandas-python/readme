# create anaconda virtual machine
https://www.anaconda.com/download/
sh /home/hsiehpinghan/Downloads/Anaconda3-5.1.0-Linux-x86_64.sh -b
/home/hsiehpinghan/anaconda3/bin/conda create --name pandas-python python=3.6 anaconda
export ANACONDA_HOME=/home/hsiehpinghan/anaconda3
export PATH=$ANACONDA_HOME/bin:$PATH
cd /home/hsiehpinghan/git/python/pandas-python/notebook/
source activate pandas-python
pip install pandas-datareader
pip install fix_yahoo_finance 

# start jupyter notebook
export ANACONDA_HOME=/home/hsiehpinghan/anaconda3
export PATH=$ANACONDA_HOME/bin:$PATH
cd /home/hsiehpinghan/git/python/pandas-python/notebook/
source activate pandas-python
